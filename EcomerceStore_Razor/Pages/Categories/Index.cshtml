@page
@model EcomerceStore_Razor.Pages.Categories.IndexModel
@{
}
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h1 class="text-primary">Category List</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Categories/Create" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> Add Category</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10 offset-1">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Category</th>
                        <th>DisplayOrder</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.CategoryList.OrderBy(u => u.DisplayOrder))
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.DisplayOrder</td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-page="/Categories/Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-page="/Categories/Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>

    </div>
    
</div>

